generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  entries   Entry[]

  @@map("users")
}

model Entry {
  id         String   @id @default(cuid())
  date       String
  sleep      Float    // Hours of sleep
  stress     Int      // 1-10 scale
  symptoms   Int      // 1-10 scale
  mood       Int      // 1-10 scale
  engagement Int      // 1-10 scale
  drugs      String?  // Optional drug names
  notes      String?  // Optional notes
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("entries")
}
